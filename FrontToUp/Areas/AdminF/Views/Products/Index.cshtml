@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Products</h4>
                    <a asp-action="Create" class="btn btn-success mt-3">Create</a>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Price
                                    </th>
                                    <th>
                                        Count
                                    </th>
                                    <th>
                                        Category
                                    </th>
                                    @*<th>
                                        Description
                                    </th>*@
                                    <th>
                                        Settings
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Product item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="~/img/@item.ImageName" width="200px" height="200px" />
                                        </td>
                                        <td>
                                            @item.Title
                                        </td>
                                        <td>
                                            @item.Price
                                        </td>
                                        <td>
                                            @item.Count
                                        </td>
                                        <td>
                                            @item.Category.Name
                                        </td>
                                        @*<td>
                                            @item.Category.Description
                                        </td>*@
                                        <td>
                                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success">
                                                Detail
                                                <i class="mdi mdi-account-card-details"></i>
                                            </a>
                                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">
                                                Update
                                                <i class="mdi mdi-table-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                                Delete
                                                <i class="mdi mdi-delete"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

