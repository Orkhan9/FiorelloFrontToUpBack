@model AppUser
@{
    ViewData["Title"] = "ChangeStatus";
}

<div class="row">
    <div class="col-md-12 d-flex align-items-stretch">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">@Model.FullName</h4>
                        <p>
                            @Model.Email
                        </p>
                        <p>
                            @Model.UserName
                        </p>
                        @if (!Model.Status)
                        {
                            <p class="text-danger">Deactive etmek ucun eminsiniz?</p>
                        }
                        else
                        {
                            <p class="text-danger">Active etmek ucun eminsiniz?</p>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mt-3">
    <a asp-action="Index" class="btn btn-dark">Go back</a>
    <form method="post">
        @if(!Model.Status)
        {
            <input type="hidden" name="Status" value="true" />
            <button type="submit" class="btn btn-danger ml-2">Deactivate</button>
        }
        else
        {
            <input type="hidden" name="Status" value="false" />
            <button type="submit" class="btn btn-success ml-2">Activate</button>
        }
    </form>
</div>

