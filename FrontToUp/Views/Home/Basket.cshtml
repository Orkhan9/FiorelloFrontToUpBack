@model List<BasketVM>
@{
    ViewData["Title"] = "Basket";
    double Total = 0;
}

    <div class="container">
        @if (TempData["success"] != null)
        {
            <div class="mt-3 alert alert-success">@TempData["success"]</div>
        }
        <div class="row">

            @if (Model.Count != 0)
            {
                <div class="col-12">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th scope="col">Image</th>
                                <th scope="col">Product Name</th>
                                <th scope="col">Price</th>
                                <th scope="col">Count</th>
                                <th scope="col">Total</th>

                                <th scope="col">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (BasketVM item in Model)
                            {
                                double total = item.Price * item.Count;
                                Total += total;
                                <tr>

                                    <td><img src="~/img/@item.Image" width="200px" /></td>
                                    <th scope="row">@item.Title</th>
                                    <td>@item.Price</td>
                                    <td>@item.Count</td>
                                    <td>@total</td>

                                    <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id">x</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <div class="col-12">
                    <p>Total:@Total</p>
                </div>
                <div class="col-12 mb-3">
                    <form method="post">
                        <input type="submit" class="btn btn-success" value="Buy now" />
                    </form>
                </div>
            }
            else
            {
                <p>Sebet boshdur</p>
            }
        </div>
    </div>
    

